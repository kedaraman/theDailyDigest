<?xml version="1.0" encoding="utf-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
         
         
  <servlet>
  		<servlet-name>landingPage</servlet-name>
  		<servlet-class>project1.LandingPageServlet</servlet-class>
  </servlet>
  
  
  
  <servlet>
  		<servlet-name>cronJob</servlet-name>
  		<servlet-class>project1.CronJobServlet</servlet-class>
  </servlet>
  
  <servlet>
  		<servlet-name>createPost</servlet-name>
  		<servlet-class>project1.CreatePostServlet</servlet-class>
  </servlet>
  
  <servlet>
  		<servlet-name>seeAllPosts</servlet-name>
  		<servlet-class>project1.SeeAllPostsServlet</servlet-class>
  </servlet>
  
  <servlet>
  		<servlet-name>subscribe</servlet-name>
  		<servlet-class>project1.SubscribeServlet</servlet-class>
  </servlet>
  
  <servlet>
  		<servlet-name>unsubscribe</servlet-name>
  		<servlet-class>project1.UnsubscribeServlet</servlet-class>
  </servlet>
  
  <servlet-mapping>
  		<servlet-name>landingPage</servlet-name>
  		<url-pattern>/landingPage</url-pattern>
  </servlet-mapping>
  

  
  <servlet-mapping>
  		<servlet-name>cronJob</servlet-name>
  		<url-pattern>/cronJob</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
  		<servlet-name>createPost</servlet-name>
  		<url-pattern>/createPost</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
  		<servlet-name>seeAllPosts</servlet-name>
  		<url-pattern>/seeAllPosts</url-pattern>
  </servlet-mapping>
  
   <servlet-mapping>
  		<servlet-name>subscribe</servlet-name>
  		<url-pattern>/subscribe</url-pattern>
  </servlet-mapping>
  
   <servlet-mapping>
  		<servlet-name>unsubscribe</servlet-name>
  		<url-pattern>/unsubscribe</url-pattern>
  </servlet-mapping>
  
  <welcome-file-list>
    <welcome-file>landingPage.jsp</welcome-file>
  </welcome-file-list>
</web-app>